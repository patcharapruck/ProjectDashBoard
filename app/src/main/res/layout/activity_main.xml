<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.5"
                android:background="#EFEFEF">

            </View>

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:background="#D5D6D8">

            </View>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="10">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3.5">

                <ImageView
                    android:layout_width="250dp"
                    android:layout_height="100dp"
                    android:layout_centerInParent="true"
                    android:background="@color/white" />


            </RelativeLayout>


            <android.support.v7.widget.GridLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="6.5"
                android:padding="5dp"
                app:alignmentMode="alignMargins"
                app:columnCount="2"
                app:columnOrderPreserved="false"
                app:rowCount="3">


                <android.support.v7.widget.CardView
                    style="@style/marginCVmenu"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="5dp"
                    app:layout_columnWeight="1"
                    app:layout_rowWeight="1">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:layout_margin="3dp"
                        android:orientation="vertical">

                        <android.support.v7.widget.CardView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginBottom="5dp"
                            app:cardBackgroundColor="#FFB4BB"
                            app:cardCornerRadius="20dp">

                        </android.support.v7.widget.CardView>

                        <TextView
                            style="@style/font_card_main"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="รายรับตามบิล"
                            android:textAlignment="center" />

                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    style="@style/marginCVmenu"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="5dp"
                    app:layout_columnWeight="1"
                    app:layout_rowWeight="1">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:layout_margin="3dp"

                        android:orientation="vertical">

                        <android.support.v7.widget.CardView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginBottom="5dp"
                            app:cardBackgroundColor="#FFDFB9"
                            app:cardCornerRadius="20dp">

                        </android.support.v7.widget.CardView>

                        <TextView
                            style="@style/font_card_main"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="รายรับจริง" />

                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    style="@style/marginCVmenu"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="5dp"
                    app:layout_columnWeight="1"
                    app:layout_rowWeight="1">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:layout_margin="3dp"
                        android:orientation="vertical">

                        <android.support.v7.widget.CardView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginBottom="5dp"
                            app:cardBackgroundColor="#BAFFC9"
                            app:cardCornerRadius="20dp">

                        </android.support.v7.widget.CardView>

                        <TextView
                            style="@style/font_card_main"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="บัตรเครดิต" />

                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    style="@style/marginCVmenu"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="5dp"
                    app:layout_columnWeight="1"
                    app:layout_rowWeight="1">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:layout_margin="3dp"
                        android:orientation="vertical">

                        <android.support.v7.widget.CardView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginBottom="5dp"
                            app:cardBackgroundColor="#BAE1FF"
                            app:cardCornerRadius="20dp">

                        </android.support.v7.widget.CardView>

                        <TextView
                            style="@style/font_card_main"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ปริมาณเครื่องดื่ม" />

                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    style="@style/marginCVmenu"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="5dp"
                    app:layout_columnWeight="1"
                    app:layout_rowWeight="1">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:layout_margin="3dp"
                        android:orientation="vertical">

                        <android.support.v7.widget.CardView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginBottom="5dp"
                            app:cardBackgroundColor="#F4D4BB"
                            app:cardCornerRadius="20dp">

                        </android.support.v7.widget.CardView>

                        <TextView
                            style="@style/font_card_main"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ยอดชำระปัจจุบัน" />

                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    style="@style/marginCVmenu"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="5dp"
                    app:layout_columnWeight="1"
                    app:layout_rowWeight="1">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:layout_margin="3dp"
                        android:orientation="vertical">

                        <android.support.v7.widget.CardView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginBottom="5dp"
                            app:cardBackgroundColor="#EBDFC7"
                            app:cardCornerRadius="20dp">

                        </android.support.v7.widget.CardView>

                        <TextView
                            style="@style/font_card_main"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="เปรียบเทียบรายรับ" />

                    </LinearLayout>

                </android.support.v7.widget.CardView>

            </android.support.v7.widget.GridLayout>


        </LinearLayout>

    </ScrollView>

</RelativeLayout>